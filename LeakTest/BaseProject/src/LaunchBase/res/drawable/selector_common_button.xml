<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient android:angle="270" android:endColor="#1E9E48" android:startColor="#1EA8A6" android:type="linear" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#A7A7A7" />
            <corners android:radius="6dp" />
            <solid android:color="#DCDCDC" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient android:angle="270" android:endColor="#13B94A" android:startColor="#12C4C2" android:type="linear" />
        </shape>
    </item>
</selector>